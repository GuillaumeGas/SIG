	conv.getConvexe();

	for (int i = 0; i < list.size(); i++) {
	    panneau.add(conv.listPoints.get(i));
	}

	panneau.add(new Point(20, 20));

	Fenetre fenetre = new Fenetre(panneau);
	fenetre.show();





